<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
    <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>  
    <property name="connection.username">sa</property>
    <property name="connection.password"></property>
    <!-- 
    <property name="connection.url">jdbc:hsqldb:file:H:\workspace\Lexis\work\database\defaultDB;shutdown=true</property>
     -->

    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="hibernate.jdbc.batch_size">0</property>

    <property name="use_sql_comments">true</property>
    <property name="hibernate.show_sql">true</property>
    
    <mapping resource="info/rolandkrueger/lexis/plugin/DBO_LanguagePlugin.hbm.xml" />    
    <mapping resource="info/rolandkrueger/lexis/data/Language.hbm.xml" />
    <mapping resource="info/rolandkrueger/lexis/data/vocable/DBO_AbstractUserInput.hbm.xml" />
    <mapping resource="info/rolandkrueger/lexis/data/vocable/RegisteredVocableDataKey.hbm.xml" />
    <mapping resource="info/rolandkrueger/lexis/data/vocable/Vocable.hbm.xml" />
    <mapping resource="info/rolandkrueger/lexis/data/vocable/VocableData.hbm.xml" />
    <mapping resource="info/rolandkrueger/lexis/data/units/LearningUnit.hbm.xml" />
    <mapping resource="info/rolandkrueger/lexis/data/userprofile/UserProfile.hbm.xml" />
    <mapping resource="info/rolandkrueger/lexis/data/userprofile/VocableQuizStatistics.hbm.xml" />
  </session-factory>
</hibernate-configuration>
